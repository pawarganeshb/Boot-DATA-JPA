spring.application.name=Boot-14-Data-JPA-Versioning-and-TimeStamping
#MYSQL Properties
spring.datasource.url=jdbc:mysql://localhost:3306/company
spring.datasource.username=root
spring.datasource.password=root


#JPA Properties
spring.jpa.show-sql=true
spring.jpa.hibernate.ddl-auto=update
spring.jpa.properties.hibernate.format_sql=true


spring.hikari.minimumIdle=5
spring.hikari.maximumPoolSize=20
spring.hikari.autoCommit=true
spring.hikari.transactionIsolation=TRANSACTION_READ_COMMITTED
